{
  "name": "openclub",
  "version": "1.0.0",
  "main": "bin/server.js",
  "private": true,
  "engines": {
    "node": ">=4.5.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx app server",
    "lint:fix": "eslint --ext .js,.jsx app server --fix",
    "clean": "rimraf public && rimraf dist",
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev": "webpack-dev-server --history-api-fallback --port 3000 --config config/webpack.config.babel.js",
    "build:dev": "cross-env NODE_ENV=development webpack --debug --colors --progress --display-error-details --profile --config ./config/webpack.config.babel.js",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --colors --display-error-details --config ./build/webpack.config.js",
    "test": "cross-env NODE_ENV=test karma start ./app/tests/karma.conf.js",
    "test:watch": "cross-env NODE_ENV=test npm test -- --watch --no-single-run",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenClubDev/openclub.git"
  },
  "author": "Will Hackett <will@willhackett.com> (http://willhackett.com)",
  "license": "Proprietary",
  "dependencies": {
    "antd": "^2.8.0",
    "apollo-client": "^0.10.1",
    "auth0-lock": "^10.12.2",
    "graphql-tag": "^1.3.1",
    "rc-cropping": "^0.1.11",
    "rc-dialog": "^6.5.6",
    "rc-drawer": "^0.4.9",
    "rc-upload": "^2.3.3",
    "react": "^15.4.2",
    "react-apollo": "^0.13.0",
    "react-dom": "^15.4.2",
    "react-image-crop": "^2.0.2",
    "react-player": "^0.14.3",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-form": "^6.5.0",
    "redux-modal": "^1.3.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-import": "^1.1.1",
    "babel-plugin-module-resolver": "^2.5.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.2.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "html-webpack-plugin": "^2.28.0",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "node-sass": "^4.5.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.2",
    "uglify-loader": "^1.4.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
