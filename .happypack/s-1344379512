/**
 * List of error based validation functions and related messages
 */

var required = function required(val) {
  return !val || val.length <= 0 ? 'This field must have a value.' : undefined;
};

var minLength = function minLength(len) {
  return function (val) {
    return !val || val.length < len ? 'This field must be at least ' + len + ' characters long.' : undefined;
  };
};

var maxLength = function maxLength(len) {
  return function (val) {
    return val && val.length > len ? 'This field must be no more than ' + len + ' characters long.' : undefined;
  };
};

var email = function email(val) {
  return !val.match(/^[\w\d._%+-]+@[\w\d.-]+\.[\w]{2,}/) ? 'Please enter a valid email address.' : undefined;
};

var phone = function phone(val) {
  return !val.match(/^[\d\s()+]{6,}/) ? 'Please enter a valid phone number.' : undefined;
};

var name = function name(val) {
  return !val.match(/^[a-zA-ZàáâäãåąčćęèéêëėįìíîïłńòóôöõøùúûüųūÿýżźñçčšžÀÁÂÄÃÅĄĆČĖĘÈÉÊËÌÍÎÏĮŁŃÒÓÔÖÕØÙÚÛÜŲŪŸÝŻŹÑßÇŒÆČŠŽ∂ð ,.'-]{2,}$/) ? 'Names can only contain dictionary characters (a-z) and punctuation (\',-.).' : undefined;
};

var object_name = function object_name(val) {
  return !val.match(/^[\w\s\d'-]+$/) ? 'Names must contain only dictionary characters, punctuation, underscores and numbers.' : undefined;
};

var slug = function slug(val) {
  return !val.match(/^[\w\d]+(?:-[\w\d]+)*$/) ? 'URLs can only contain lowercase letters (a-z), numbers (0-9) and hyphens (-), and cannot start or end with a hyphen (-).' : undefined;
};

var abn = function abn(val) {
  return !val.match(/^(\d *?){11}$/) ? 'Please enter a valid Australian Business Number (ABN).' : undefined;
};

var vat = function vat(val) {
  return !val.match(/^(GB)?([0-9]{9}([0-9]{3})?|[A-Z]{2}[0-9]{3})$/) ? 'Please enter a valid United Kingdom VAT number.' : undefined;
};

var nzbn = function nzbn(val) {
  return !val.match(/^(\d *?){13}$/) ? 'Please enter a valid New Zealand Business Number (NZBN).' : undefined;
};

var number = function number(val) {
  return !val.match(/^[\d]+$/) ? 'Please only enter numbers.' : undefined;
};

